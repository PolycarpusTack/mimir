# Mimir News Scraper Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://mimir_user:your_strong_password@localhost:5432/mimir_news
POSTGRES_PASSWORD=your_strong_password

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
RECIPIENT_EMAIL=recipient@example.com

# Security
JWT_SECRET_KEY=your-jwt-secret-key-minimum-32-characters
SESSION_SECRET_KEY=your-session-secret-key

# API Configuration
API_BASE_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Redis Configuration (for async processing)
REDIS_URL=redis://localhost:6379/0

# Analytics & TimescaleDB
TIMESCALE_URL=postgresql://mimir_user:your_strong_password@localhost:5433/mimir_analytics

# Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000

# Development/Production Environment
ENVIRONMENT=development
DEBUG=true